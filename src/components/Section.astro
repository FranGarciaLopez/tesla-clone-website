---
// Section.astro
const { color = "white", title, subtitle, subtitleSecondary } = Astro.props;
const textColor = `text-${color}`;
---

<section
       class="landing-section bg-black h-screen w-full text-center relative overflow-hidden"
       data-header-color={color}
>
       <div class="z-30 relative h-full flex flex-col">
              <header>
                     <h2
                            class={`${textColor} pt-[5rem] text-3xl font-semibold md:text-5xl`}
                     >
                            {title}
                     </h2>

                     {
                            title === "Nuevo Model Y" ? (
                                   <div>
                                          <p
                                                 class={`text-sm p-2 transition-colors ${textColor}`}
                                          >
                                                 {subtitle}
                                          </p>
                                          <div class="flex justify-center gap-x-4 mt-2">
                                                 <slot name="footer" />
                                          </div>
                                   </div>
                            ) : (
                                   <p
                                          class={`text-sm p-2 transition-colors ${textColor}`}
                                   >
                                          {subtitle}
                                   </p>
                            )
                     }

                     {
                            (title === "Model Y" || title === "Model 3") && (
                                   <p
                                          class={`text-xs px-4 transition-colors ${textColor}`}
                                   >
                                          {subtitleSecondary}
                                   </p>
                            )
                     }
              </header>
              <footer
                     class="flex flex-nowrap flex-col justify-end py-5 flex-grow"
              >
                     {
                            title !== "Nuevo Model Y" && (
                                   <div class="flex justify-center gap-x-4">
                                          <slot name="footer" />
                                   </div>
                            )
                     }
                     <slot name="footer-anchor" />
              </footer>
       </div>

       <div class="absolute top-0 bottom-0 z-10">
              <slot name="background" />
       </div>
</section>
